<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TypeofListsActivity">

    <Button
        android:id="@+id/btn_list_view_on_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="List View on Activity" />

    <Button
        android:id="@+id/btn_list_view_on_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_list_view_on_activity"
        android:layout_alignParentStart="true"
        android:text="List View on Fragment" />

    <Button
        android:id="@+id/btn_custom_list_view_on_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_list_view_on_fragment"
        android:layout_alignParentStart="true"
        android:text="Custom List View on Activity" />

    <Button
        android:id="@+id/btn_custom_list_view_on_Fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_custom_list_view_on_activity"
        android:layout_alignParentStart="true"
        android:text="Custom List View on Fragment" />

    <Button
        android:id="@+id/btn_recycler_view_on_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_custom_list_view_on_Fragment"
        android:text="Recycler View on Activity" />

    <FrameLayout
        android:id="@+id/fragmentcontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>